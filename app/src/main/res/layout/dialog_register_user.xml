<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/standart_margin"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:text="@string/register_dialog_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/GrayUnderlineEditText"
        android:hint="@string/name"
        android:layout_gravity="center_horizontal">

        <com.nailonline.client.extension.CloseKeyboardEditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            app:theme="@style/GrayUnderlineEditText"
            android:maxLength="25"/>

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/standart_margin"
        android:text="@string/name_explain"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/GrayUnderlineEditText"
        android:hint="@string/phone_hint"
        android:layout_gravity="center_horizontal">

        <com.nailonline.client.extension.CloseKeyboardEditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="+7"
            app:theme="@style/GrayUnderlineEditText"
            android:maxLength="12"/>

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="@string/phone_explain"/>

</LinearLayout>