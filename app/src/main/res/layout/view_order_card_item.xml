<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/master_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/test" />

                <TextView
                    android:id="@+id/master_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/master_photo"
                    android:text="Наталья"
                    android:textSize="16sp"
                    tools:ignore="RtlHardcoded"
                    tools:text="Наталья" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standart_margin"
                android:layout_marginRight="@dimen/standart_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="27.02.2017 09:00"
                    tools:text="27.02.2017 09:00" />

                <TextView
                    android:id="@+id/job_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Забронирована"
                    tools:text="Забронирована" />

            </LinearLayout>

            <TextView
                android:id="@+id/job_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standart_margin"
                android:layout_marginRight="@dimen/standart_margin"
                android:layout_marginTop="4dp"
                android:text="Лечебное"
                android:textStyle="bold"
                tools:text="Лечебное" />

            <TextView
                android:id="@+id/job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standart_margin"
                android:layout_marginRight="@dimen/standart_margin"
                android:layout_marginTop="4dp"
                android:text="5 мин, 30 Р за руку"
                android:textStyle="bold"
                tools:text="5 мин, 30 Р за руку" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/filled_button_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/filled_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/standart_margin"
                        android:paddingRight="@dimen/standart_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        tools:text="Повторить" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/blank_button_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/blank_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/standart_margin"
                        android:paddingRight="@dimen/standart_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        tools:text="Отменить" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
