<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/tbsLayout"
        layout="@layout/view_tbs_master" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageFacebook"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/imageVk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_vk" />

        <ImageView
            android:id="@+id/imageInsta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_insta" />

        <ImageView
            android:id="@+id/imageOk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_ok" />

        <ImageView
            android:id="@+id/imagePhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_phone" />
    </LinearLayout>

    <include layout="@layout/gray_divider" />

    <TextView
        android:id="@+id/giftsText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/standart_margin"
        android:paddingRight="@dimen/small_margin"
        android:text="@string/gifts"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:textSize="18sp"/>

</LinearLayout>