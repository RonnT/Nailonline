<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/just_grey</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="CalendarWeekDayStyle" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/calendar_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarDateStyle" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/calendar_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarHeaderStyle" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/calendar_grey</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>